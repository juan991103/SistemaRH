@model IEnumerable<SistemaRH.Models.Empleados>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h4 class="card-title">Gestion de Empleados</h4>
</div>
<p>
    <a asp-action="Create">Agregar empleado aceptado</a>
</p>

<form asp-action="Index" method="post">
    <div class="form-actions no-color d-flex justify-content-between" style=" border:solid; border-radius:5px; border-width:2px; padding:0.6px">
        <input type="search" name="busqueda" value="" class="form-control" placeholder="Buscar por nombre...">
        <input type="date" name="start" value="" class="form-control" placeholder="Fecha desde...">
        <input type="date" name="end" value="" class="form-control" placeholder="Fecha hasta...">
        <input type="submit" value="Buscar" class="btn btn-outline-success form-control" />
    </div>
</form>

<div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Cedula)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>Fecha de Ingreso</th>
                    <th>Departamento asignado</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Puesto)
                    </th>
                    <th>
                        Salario mensual
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cedula)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Departamento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Puesto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Salario_Mensual)
                        </td>
                        @if (item.Estado == true)
                        {
                            <td class="text-success">
                                @Html.DisplayName("Activo")
                                <i class="ti-arrow-up"></i>
                            </td>
                        }
                        else if (item.Estado == false)
                        {
                            <td class="text-danger">
                                @Html.DisplayName("Inactivo")
                                <i class="ti-arrow-down"></i>
                            </td>
                        }
                        <td>
                            <a class="btn btn-warning btn-rounded btn-fw" asp-action="Edit" asp-route-id="@item.Id" value="Editar">Editar</a>
                            <a class="btn btn-danger btn-rounded btn-fw" asp-action="Delete" asp-route-id="@item.Id" value="Eliminar">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>