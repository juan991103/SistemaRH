@model SistemaRH.Models.Empleados

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Empleados</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control" />
                @Html.ValidationMessageFor(d => d.Cedula)
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <select asp-for="Nombre" class="form-control">
                    @foreach (var item in ViewBag.emps)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha_Ingreso" class="control-label"></label>
                <input asp-for="Fecha_Ingreso" class="form-control" />
                <span asp-validation-for="Fecha_Ingreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Departamento" class="control-label"></label>
                <select asp-for="Departamento" class="form-control">
                    @foreach (var item in ViewBag.dep)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="Departamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Puesto" class="control-label"></label>
                <select asp-for="Puesto" class="form-control">
                    @foreach (var item in ViewBag.pst)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="Puesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salario_Mensual" class="control-label"></label>
                <input asp-for="Salario_Mensual" class="form-control" />
                <span asp-validation-for="Salario_Mensual" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

