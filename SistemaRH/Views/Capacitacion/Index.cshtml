@model List<SistemaRH.Models.Capacitacion>
@{ 
    ViewData["Title"] = "Index"; 
}

<div class="text-center">
    <h4 class="card-title">Gestion de Capacitacion</h4>
</div>
<p>
    <a asp-action="Create">Agregar Capacitacion</a>
</p>
<p class="card-description">Add class <code>.table-hover</code>
</p>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Descripcion</th>
                <th>Nivel</th>
                <th>Fecha desde...</th>
                <th>Fecha hasta...</th>
                <th>Institucion</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nivel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Desde)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Hasta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Institucion)
                </td>
                <td>
                    <a class="btn btn-warning btn-rounded btn-fw" asp-action="Edit" asp-route-id="@item.Id" value="Editar">Editar</a>
                    <a class="btn btn-danger btn-rounded btn-fw" asp-action="Delete" asp-route-id="@item.Id" value="Eliminar">Eliminar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>