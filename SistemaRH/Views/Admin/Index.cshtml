
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Copia.cshtml";
}

<h1>SistemaRH</h1>

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <h2 class="active"> Administrador </h2>
        <a class="inactive underlineHover" asp-action="Candidatos">Candidatos </a>

        <!-- Icon -->
        <div class="fadeIn first">
            <img src="http://danielzawadzki.com/codepen/01/icon.svg" id="icon" alt="User Icon" />
        </div>

        <!-- Login Form -->
        <form>
            <input type="text" id="login" class="fadeIn second" name="login" placeholder="Iniciar Sesioon">
            <input type="text" id="password" class="fadeIn third" name="login" placeholder="Contraseña">
            <a asp-controller="Home" asp-action="Index"><input type="button" class="btn fadeIn fourth" value="Iniciar Sesion"></a>
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" href="#">Recuperar Contraseña?</a>
        </div>

    </div>
</div>